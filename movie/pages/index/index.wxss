/* pages/index/index.wxss */
#index {
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
}
.search {
	border: 1px solid #ddd;
	border-radius: 3px;
	padding: 0 7px;
	font-size: 30rpx;
	position: fixed;
	left: 3px;
	top: 3px;
	right: 3px;
	z-index: 9;
	background-color: #fff;
	height: 100rpx;
	line-height: 100rpx;
}
.result {
	margin: 10px 3px;
	margin-top: 120rpx;
	padding: 5px 0;
}
.cont {
	padding: 5px 0;
	border-top: 1px solid #ddd;
	display: flex;
}
.cont:last-child {
	border-bottom: 1px solid #ddd;
}
.cont image {
	width: 200rpx;
	height: 200rpx;
}
.text {
	flex: 3;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.tit {
	font-size: 36rpx;
	margin-bottom: 7px;
}
.sub-tit {
	font-size: 29rpx;
	color: #999;
	margin-bottom: 7px;
}
.year {
	color: rgb(248, 112, 0);
	font-size: 24rpx;
}
/*无查询结果*/
.isnull {
	font-size: 24rpx;
	color: #999;
	margin-bottom: 20rpx;
}
